<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/grayCard"
    android:layout_gravity = "center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mechanics"
            android:textColor="@color/white"
            android:id="@+id/title_mechanic_service"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/title_mechanic_service"
            android:layout_marginHorizontal="30dp"
            android:background="@color/grayBottom"
            android:id="@+id/viewLine"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewLine"
            android:text="Criado em:"
            android:textColor="@color/white"
            android:id="@+id/created_at_service"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/serviceName"
            android:layout_below="@id/created_at_service"
            android:text="ServiÃ§o:"
            android:textColor="@color/white"
            android:gravity="center"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>